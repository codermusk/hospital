<div class="ui placeholder segment" , style="padding: 140px">
  <%= form_with url: appointment_prescribtions_path(params[:appointment_id]), class: "ui form" , method: :post  , scope:  :prescribtion do |f|  %>

    <%= fields_for :bill_attributes do|field| %>
      <div class="row mb-3">
        <%= field.label :doctor_fees , class:"col-sm-8 col-form-label" %>
        <div class="col-sm-5" >
          <%= field.number_field :doctor_fees ,class:"form-control" %>
        </div>

      </div>


    <% end %>
    <br>
    <div class="row mb-3">
      <%= f.label :tablets ,class:"col-sm-8 col-form-label" %>
      <div class="col-sm-10" >
        <%= f.text_area :tablets, class:"form-control",style:"font-size:2rem;width:55%; margin: 0; max-width: initial" %>
      </div>

    </div>
    <div class="row mb-3">
      <%= f.label :comments ,class:"col-sm-8 col-form-label" %>
      <div class="col-sm-10" >
        <%= f.text_area :comments, class:"form-control",style:"font-size:2rem;width:55%; margin: 0; max-width: initial" %>
      </div>

    </div>


 <hr>

    <%= f.submit %>



  <% end %>
</div>
