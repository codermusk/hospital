<div class="ui container" style="padding: 5%">
  <div class="ui  placeholder segment" style="padding: 160px">

    <h2 class="ui text" >Sign Up</h2>
    <br>


    <%= form_for(resource, as: resource_name, class:"ui form", url: registration_path(resource_name)) do |f| %>

      <%= render "accounts/shared/error_messages", resource: resource %>

      <%= fields_for :patient do |form| %>

<div class="row mb-3 ">

  <div class="col-sm-10">
        <%= form.text_field :name , class:"form-control",:required => true , placeholder: "Name" %>
  </div>
</div>



        <div class="row mb" , style="padding-left: 20px">
          <%= form.label :sex  %>
          <%= form.radio_button :sex , "Male", :checked=>true%>
          <%= form.label :sex_Male , "Male" %>
          <%= form.radio_button :sex , "Female"%>
          <%= form.label :sex_Female , "Female" %>`

        </div>

        <div class="row mb-3 ">

          <div class="col-sm-10">
            <%= form.number_field :age , class:"form-control" , min:1 , max:100,:required => true  , placeholder:"Age"%>
          </div>
        </div>
        <br>

        <div class="row mb-3 ">

          <div class="col-sm-10">
            <%= form.telephone_field :mobile_number , class:"form-control" ,:required => true , placeholder: "Mobile Number"%>
          </div>
        </div>
      <% end %>

      <br>
      <div class="row mb-3 ">

        <div class="col-sm-10">
          <%= f.email_field :email , class:"form-control",:required => true , placeholder:"Email" %>
        </div>
      </div>
      <br>
      <div class="row mb-3 ">

        <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password"  , class:"form-control",:required => true , placeholder:"Password"%>

      </div>
      </div>


      <br>
      <div class="row mb-3 ">

        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password"  , class:"form-control",:required => true, placeholder:"Confirm Password"%>

        </div>
      </div>
      <br>
      <br>

      <div class="col-14" style="padding-right: 98px">
        <%= f.submit "Sign up" , class:'ui orange button' %>
      </div>
    <% end %>
    <br>



<div class="col-sm"  style="padding-right: 98px">
  <%= render "accounts/shared/links"%>
</div>



  </div>
</div>