<div class="ui container" style="padding: 10%">
  <div class="ui  placeholder segment" style="padding: 230px">

    <h2 class="field" >Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "accounts/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>


      <div class="field">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <br>

<div class="field" , style="padding-right: 98px">
  <%= render "accounts/shared/links" %>
</div>



  </div>
</div>