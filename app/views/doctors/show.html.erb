<div class="ui container " style="padding: 70px">
<div class="ui segment">
  <h1>
    Name : Dr.
    <%= @doctor.name %>
  </h1>
  <p style="font-size: 20px">
    Area of Specialization :
    <%= @doctor.specialization %>
  </p>
<div class="center aligned ui container">
  <%= form_with url: book_appointment_path(@doctor) , scope: Appointment, method: :post do |form| %>
<%= form.label :appointment_date , "Appointment date" , style:'font-size:17px' %>
  <%= form.date_field :appointment_date%>
    <% aptime = [['10 AM' , :time],['11 AM' , :time],['12 PM' , :time],['1 PM' , :time],['2 PM' , :time],['3 PM' , :time],['4 PM' , :time],['5 PM' , :time]] %>
    <%= form.select :time , aptime %>
    <%#= form.options_for_select(aptime) %>
    <br>
    <br>


    <%= form.submit "Book Appointment", class: 'btn btn-primary' , data:{confirm: 'Are you Sure' }  %>


  <% end %>
  <br>



</div>
</div>
</div>