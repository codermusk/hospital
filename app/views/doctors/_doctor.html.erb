

        <div class="ui five wide column" >
          <div class="ui  raised segment"  style="height: 300px">
            <div class="ui  segments" style="display: flex;flex-direction: row;justify-content: space-between;align-items: center">
              <div style="width:20%">
                <div class="item ui label massive" , style="width: 200px;overflow:clip" >
                  <i class="doctor icon">
                    <h1 style="font-family: 'Jost', sans-serif ;">
                      <%= doctor.name %>
                    </h1>
                  </i>
                </div>
              </div>
              <div style="padding: 0px 10px; ">
                <strong style="font-size: 20px">
                  Specialization:
                  <%= doctor.specialization %>
                </strong>
              </div>
            </div>
            <div style="display: flex; justify-content: space-between">

              <div style="font-size: 20px">
                Patients Attended :
                <%= doctor.appointments.where(status: 1).count %>
              </div>



            </div>

            <div style="font-size: 20px">
              Mail :
              <%= doctor.email %>
            </div>
            <% ratingc = 0 %>
            <% doctor.ratings.each do |rat| %>
            <% ratingc = ratingc+rat.rating %>
            <% end %>

            <div style="font-size: 20px">
              Average Rating :
              <% if doctor.ratings.count>0 %>
                <%= ratingc/doctor.ratings.count %>
                <% else %>
              0
                <% end %>

            </div>

            <br>
            <br>

            <div>
              <%= link_to 'Book Appointment ğŸ’‰', doctor, class: "ui inverted orange button", style: "font-size:15px" %> &ensp;
              <%= link_to 'Ratings and Review', "/doctors/#{doctor.id}/ratings", class: "ui blue inverted  button", style: "font-size:15px; width:max-content , color: darkblue" %>
            </div>


          </div>
        </div>



