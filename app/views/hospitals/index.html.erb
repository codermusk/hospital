

<div class="ui segment " style="padding-top: 90px ; padding-right: 300px ; padding-left: 300px">
  <div class="floating-fields">
    <%= form_with url: search_hospitals_path, local: true, html: { class: "ui right aligned container search-form" } do |f| %>
      <div class="ui massive action input">
        <%= f.text_field :query, placeholder: "search Hospitals...", autocomplete: "off" %>
        <button onclick="this.formAction.submit()" class="ui custom orange button">
          <i class="search icon"></i>
          Search
        </button>
      </div>
    <% end %>
  </div>

  <%= render "hospitals", hospitals: @hospitals %>

</div>