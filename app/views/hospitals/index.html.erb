<div class="ui placeholder segment " style="padding: 100px">
  <% @hospitals.each do |hospital| %>

  <div class="center aligned ui segment" style="padding:30px">

    <h1>
      <%= hospital.name %>
    </h1>
<div style="padding-right: 1120px">
    <strong class="left aligned" style="font-size: 25px">
      Mail :
      <%= hospital.mail  %>
    </strong>

    <h2 >
      Number of Doctors
      <%= hospital.doctors.count %>
    </h2>

  </div>
    <div class="center aligned"></div>
    <%= link_to ' Show Doctors ‍👩🏻‍⚕️' , hospital_doctors_path(hospital_id: hospital) , class: "btn btn-primary" %>
  </div>
  <% end %>
</div>