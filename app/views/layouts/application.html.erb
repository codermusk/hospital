  </head>

  <body>
  <div class="ui stackable menu huge massive" style="background-color: #1C315E; height: 110px">
    <div class="item" , style="padding-top: 10px">
      <%= image_tag("h.png" , style: "height:110px;width:80px")%>
    </div>


    <div class = "right menu">

<!--      <a class="item"> Edit Profile</a>-->
     <% if current_account %>
        <% if current_account.accountable_type=='Patient' %>

          <%= link_to "Book Appointment" ,root_url , class: 'item' , style: 'font-size:25px; color:white' %>
          <%= link_to "My Appointments" , patient_appointments_path(current_account.accountable_id) , class:'item', style: 'font-size:25px; color:white' %>
        <div , style="padding-top: 20px">
          <%= button_to "Log out " , destroy_account_session_path , method: :delete , class:'ui inverted orange button', style: 'font-size:25px; color:white' %>
        </div>

        <%else %>

          <div , style="padding-top: 20px">
            <%= button_to "Log out " , destroy_account_session_path , method: :delete , class:'ui inverted orange button', style: 'font-size:25px; color:white' %>
          </div>
        <%end %>
        <% else %>
        <%= link_to "Hospitals" , hospitals_path , class: 'item' , style: 'font-size:25px; color:white'%>
        <div style="padding-top: 34px; padding-right: 20px">

          <%= button_to "Sign up/ Login" ,  new_account_registration_path  , method: :get,  class: 'ui white button' , style: 'font-size:15px; color:black ' %>
        </div>

<% end %>

        </div>
  </div>
<% if notice %>
    <div class="ui positive notice message" style="width: max-content; margin: auto" >
      <i class="close icon"></i>
      <%= notice  %>
    </div>
    <%end %><% if alert %>
    <div class="ui negative notice message" style="width: max-content; margin: auto" >
      <i class="close icon"></i>
      <%= alert  %>
    </div>
  <%end %>


  <%= yield %>
    <style>

    </style>
    <script>
        document.querySelector('.message .close.icon')?.addEventListener('click', (ev)=> { ev.target.parentElement.style.display = "none";});
    </script>
  </body>
</html>
